	keywords = {Humans, Pain Measurement, Adult, Female, Male, Middle Aged, Hot Temperature, Cold Temperature, Thermosensing, Hyperalgesia, Pain Threshold, Psychophysics, Experimental model, Healthy volunteers, Thermal sensation, Differential Threshold, Thermoreception},
