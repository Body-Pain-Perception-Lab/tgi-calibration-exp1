	keywords = {Humans, Touch, Adult, Female, Male, Adolescent, Physical Stimulation, Young Adult, Anisotropy, Hand, Reference Values, Distance Perception, Illusions, Orientation, Psychometrics, Discrimination, Psychological, Signal Detection, Psychological, Touch Perception},
